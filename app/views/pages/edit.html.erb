  // 定义图片库, drop area
  var $gallery = $( ".picRes" ),
  $input = $( ".homeMenu li" );

  // 使图片库里面的元素可托拽
  it_drag($( ".picBox", $gallery ));

  // drop 元素
  it_drop($input);
  $input=$( ".homeBg span" );
  it_drop($input);

  $input_75 = $( ".temp75-70 a" );
  $input_106 = $( ".temp106-80 a" );
  $input_280 = $( ".tmp_280-196 a" );

  // drop 元素
  it_drop_75($input_75);
  it_drop_106($input_106);
  it_drop_280($input_280);

</script>