        <a href="#"><li class="homeNav hn8">8</li></a>
      </ul>
    </div>

    <div class="iv_temp4 main_tab">
      <div class="page_content">
        <%= form_for [@site, @page], :html => {:id => "main_page_form", :remote => true} do |f| %>
          <%= f.hidden_field :title, :value => 'index' %>
          <%= f.hidden_field :file_name, :value => 'index' %>
          <%= f.hidden_field :types, :value => Page::TYPE_NAMES[:main] %>
          <%= f.text_area :content, :class => "page_txt" %>

          <div class="page_act">
            <button class="blue_btn" type="submit" onclick="return changeUrl(this, '<%= @site.id %>', 0, null)">保存</button>
            <button class="blue_btn" type="submit" onclick="return changeUrl(this, '<%= @site.id %>', 1, null)">预览</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
  $(function(){
    $(".tmp_list li").click(function(){
      var className = $(this).attr("class").split(/\s/)[0];
      $(".tmp_list li").removeClass("hover");
      $(".main_cont .main_tab").hide();
      $(".main_cont .iv_" + className).show();
      $(this).addClass("hover");
    })
  })
</script>