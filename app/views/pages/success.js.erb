<% if (@page.sub? || @page.form?) && controller.action_name == "update" %>
  hide_tab($("#<%= @page.sub? ? "sub_form" : "form_container" %>"));
  $("#" + <%= @page.id %>).find(".title").text("<%= @page.title %>").end().find(".path").text("<%= "/sites/static" + "?path_name=" + @page.path_name  %>")
  .end().find(".authenticate").text("<%= if_authenticate(@page) %>").end().find(".page_preview").attr("href", "<%= "/sites/static" + "?path_name=" + @page.path_name %>");
tishi_alert("更新成功！")
<% else %>
  window.location.replace("<%= @path %>")
<% end %>