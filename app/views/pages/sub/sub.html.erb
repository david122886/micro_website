<div class="main_container">
  <%= render '/sites/site_status' %>
  <div class="tabDiv">
    <div class="page_content ">
      <div class="page_tit">
        <%= link_to "新建子页", sub_new_site_pages_path(@site), :remote => true, :class => "blue_btn scd_btn" %>
      </div>
      <div class="page_txt">
        <table class="table1">
          <tr>
            <th width="100">标题</th>
            <th width="300">路径</th>
            <th width="50">访问控制</th>
            <th width="300">操作</th>
          </tr>
          
          <% @sub_pages.each do |page| %>
            <tr>
              <td><%= page.title %></td>
              <td><%= "/sites/static" + "?path_name=" + page.path_name %></td>
              <td><%= if_authenticate(page) %></td>
              <td>
                <%= link_to "访问权限" , if_authenticate_site_page_path(@site,page),:remote => true, :class => "blue_btn"%>
                <%= link_to "编辑" , sub_edit_site_page_path(@site,page),:remote => true, :class => "blue_btn"%>
                <%= link_to "删除" , site_page_path(@site, page),:method => :delete, :confirm => "确定删除吗？", :class => "blue_btn"%>
                <%= link_to "预览" , "/sites/static" + "?path_name=" + page.path_name,:target =>"_blank", :class => "blue_btn"%>
              </td>
            </tr>
          <% end %>
        </table>          
      </div>
      
      <div class="clear"></div>
      
      <div class="digg_pagination" style="margin:0 auto;text-align: center;">
      <%= will_paginate  @sub_pages,:previous_label=>'上一页',:next_label=>'下一页'%>
      </div>
      
      <div class="page_act"></div>
    </div>
  </div>
</div>

<div class="second_box newPage">
  <div class="second_content second_content2">
    <span class="close" >关闭</span>
    <div id="sub_form">
    </div>
  </div>
</div>