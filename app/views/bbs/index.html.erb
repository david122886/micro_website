<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>万苏论坛</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <script type="text/javascript" src="/allsites/js/jQuery-v1.9.0.js"></script>
    <script type="text/javascript" src="/assets/bbs.js"></script>
    <link href="/assets/bbs.css" rel="stylesheet" type="text/css"/>
  </head>

  <body>
  <article>
    <section class="bbs_title">
      <% if @post %>
        <a href="<%= bbs_detail_site_post_path(@site, @post) %>"><img src="<%= @post.post_img %>" /><div class="bbs_title_text"><%= @post.title %></div></a>
      <% end %>
    </section>

    <% @posts.each do |post| %>
      <section class="bbs_list">
        <div class="bbs_list_avatar"><a href="<%= bbs_detail_site_post_path(@site, post) %>"><img src="<%= post.post_img %>"/></a></div>
        <div class="bbs_list_con">
          <h1 class="video_icon"><a href="<%= bbs_detail_site_post_path(@site, post) %>"><%= post.title %></a></h1>
          <div class="list_text"><a href="<%= bbs_detail_site_post_path(@site, post) %>"><%= post.title %></a></div>
          <div class="list_func">
            <span class="list_time"><%= post.created_at.strftime("%Y-%m-%d") %></span>
            <a href="#" class="list_mess">47</a>
            <a href="#" class="list_good"><%= post.praise_number || 0 %></a>
          </div>
        </div>
      </section>
    <% end %>
   
    <section class="bbs_dropDown">加载更多...</section>

  </article>

</body>
</html>
