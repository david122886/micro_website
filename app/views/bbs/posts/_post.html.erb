<% @posts.each do |post| %>
  <section class="bbs_list">
    <div class="bbs_list_avatar"><a href="<%= bbs_detail_site_post_path(@site, post) %>"><img src="<%= post.post_img %>"/></a></div>
    <div class="bbs_list_con">
      <h1 class="video_icon"><a href="<%= bbs_detail_site_post_path(@site, post) %>"><%= post.title %></a></h1>
      <div class="list_text"><a href="<%= bbs_detail_site_post_path(@site, post) %>"><%= raw(post.post_content).truncate(30, :seperator => ".") %></a></div>
      <div class="list_func">
        <span class="list_time"><%= post.created_at.strftime("%Y-%m-%d") if  post.created_at %></span>
        <a href="#" class="list_mess"><%= post.comments_count %></a>
        <a href="#" class="list_good"><%= post.praise_number %></a>
      </div>
    </div>
  </section>
<% end if @posts %>
<% if @posts && @post_total > 3 * @page %>
  <section class="bbs_dropDown" onclick="seeMorePost(this)" data-page-total="<%= @post_total %>" data-page="<%= @page %>" data-url='<%= see_more_site_posts_path(@site)+"?page=#{@page}" %>'>加载更多...</section>
<% end %>