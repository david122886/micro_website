<% @posts.each do |post| %>
<a href="<%= bbs_detail_site_post_path(@site, post) %>">
  <section class="bbs_list">
    <div class="bbs_list_avatar"><img src="<%= post.post_img %>"/></div>
    <div class="bbs_list_con">
      <h1><%= post.title %></h1>
      <div class="list_text"><%= truncate(strip_tags(post.post_content), length: 20) %></div>
      <div class="list_func">
        <span class="list_time"><%= post.created_at.strftime("%Y-%m-%d") if  post.created_at %></span>
        <span class="list_mess"><%= post.comments_count %></span>
        <span href="#" class="list_good"><%= post.praise_number %></span>
      </div>
    </div>
  </section>
</a>
<% end if @posts %>
<% if @posts && @post_total > 3 * @page %>
  <section class="bbs_dropDown" onclick="seeMorePost(this)" data-page-total="<%= @post_total %>" data-page="<%= @page %>" data-url='<%= see_more_site_posts_path(@site)+"?page=#{@page}" %>'>加载更多...</section>
<% end %>