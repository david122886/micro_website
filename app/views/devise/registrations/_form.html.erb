<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:remote => true, :method => :put }) do |f| %>

  <li><%= f.label :phone, "联系电话：" %>
    <%= f.phone_field :phone, :class => "required", :alt => "联系电话" %></li>
  <li><%= f.label :email, "E-mail：" %>
    <%= f.email_field :email, :class => "required", :alt => "E-mail" %></li>

  <li><%= f.label :current_password, "当前密码：" %>
    <%= f.password_field :current_password, :class => "required", :alt => "当前密码"  %><span class="check">*</span></li>

  <div class="uinfo_act">
    <button class="blue_btn" onclick="return check()" >确认</button>
    <button type="button" class="blue_btn cancel">取消</button>
  </div>
<% end %>
<script>

 function check(){
	
	flg=(checkPhone()&&checkEmail());
	
	return flg;
}


function checkPhone(){
	flg=true;       
	var phone =  $("#user_phone").val();
	var phoneReg =/^1[3458]\d{9}$/;
	if(!phoneReg.test(phone)){
		tishi_alert('请输入有效的联系电话。');                 
		flg=false;
	}
	
	return flg;
}




function checkEmail(){
	
	flg=true;
	var email = $("#user_email").val();
	var emailReg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
	
	 if(!emailReg.test(email))
            {
                tishi_alert('请输入有效的E_mail');                 
                flg=false;
           }		
	return flg;
	
}




</script>