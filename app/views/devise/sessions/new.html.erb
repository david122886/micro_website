
<div class="login">
  <h1>登陆</h1>

  <div class="login_info cf">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <ul>
        <li>
          <p><%= f.label :login, "帐号：" %>
            <%= f.text_field :login, :placeholder =>"用户名或邮箱" %></p>
        </li>

        <li><%= f.label :password, "密码：" %>
          <%= f.password_field :password %></li>

      </ul>
    </div>
    <div class="login_act">
      <p><%= f.submit "登陆", :class => "login_btn blue_btn" %></p>
      <p>
        <a class="rsg_btn blue_btn" href="/signup">注册</a>
        <%= link_to "忘记密码", new_password_path(:user) %>
      </p>
    </div>
  <% end %>
</div>
